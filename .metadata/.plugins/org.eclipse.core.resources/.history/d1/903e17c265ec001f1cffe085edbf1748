package Day12;

public class RemoveJunkSpecialCharacter {

	public static void main(String[] args) {
		String str1= "&&)&$Java(*0987^$Programming)(&^%%Language"; //input string with junk & special charcters;
		
		String str2=str1.replaceAll("[a-zA-z0-9]", ""); // This will remove all latter and digit 
		System.out.println(str2);
		
		String str3 = str1.replaceAll("[^a-zA-Z0-9]", " "); // this will remove non digit and non-letter character
		System.out.println(str3);
		
		String str4= str1.replaceAll("[^0-9]", ""); // This will remove everything expect number
		System.out.println(str4);
		
		String str5 = str1.replaceAll("[0-9]", ""); // Remove the number only
		System.out.println(str5);
		
		String str6 = str1.replaceAll("[a-zA-z]", ""); // Remove the number only
		System.out.println(str6);


	}

}
